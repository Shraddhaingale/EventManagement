<p id="notice"><%= notice %></p>

<h1>Listing Events</h1>

<h3> Test </h3>
<div id ="create_event">
<%= render partial: "form" %>
</div>

<div id ="show_event">
<!-- < %= render :show %> -->
</div>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @events.each do |event| %>
      <tr>
        <td> <%= event.event_title %></td>
        <td><%= link_to 'Show', event ,:remote => true ,:class => "show_event"%></td>
        <td><%= link_to 'Edit', edit_event_path(event) ,:remote => true ,:class => "edit_event" %><td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div id="render_here">

<%= render partial: "calender" %>

</div>
<!-- < %= link_to 'New Event', new_event_path %> -->



<script>
   
   $('#new_event').on('ajax:success', function(event, data) {
    
    $("#render_here").html(data);

    //$("new_form").enableClientSideValidations();
  }).on('ajax:error', function(data, xhr, status, error) {
    alert(JSON.stringify(status));
  });
   
   $('.edit_event').on('ajax:success', function(event, data) {
    
    $("#create_event").html(data);

    //$("new_form").enableClientSideValidations();
  }).on('ajax:error', function(data, xhr, status, error) {
    alert(JSON.stringify(status));
  }); 

   $('.show_event').on('ajax:success', function(event, data) {
    
    $("#show_event").html(data);

    //$("new_form").enableClientSideValidations();
  }).on('ajax:error', function(data, xhr, status, error) {
    alert(JSON.stringify(status));
  }); 
</script>

